{
  "manifest_version": 3,
  "name": "PolyZK",
  "version": "1.0.0",
  "description": "Privacy-preserving trading on Polymarket via Midnight blockchain",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://polymarket.com/*",
    "https://*.polymarket.com/*",
    "http://localhost/*",
    "ws://localhost/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://polymarket.com/*", "https://*.polymarket.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
